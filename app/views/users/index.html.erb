<h1>Users</h1>

<table class="container">
<% @users.each do |user| %>
  <tr>
    <td><%= link_to(image_tag((user.face_url.blank? ? '/images/faces/default.jpg' : user.face_url), :width => 32, :height => 32, :class => 'smallface'), user) %> </td>
    <td><%= link_to user.name, user %> (<%= user.email %>)</td>
    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
