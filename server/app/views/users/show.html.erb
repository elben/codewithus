<p id="notice"><%= notice %></p>

<h1>Hi, <%= @user.username %>!</h1>

<%= link_to 'Edit', edit_user_path(@user) %>

<h2>Subscriptions</h2>
<% if @user.subscriptions.length > 0 %>
  <h3>Who I'm Following</h3>
  <% for subscription in @user.subscriptions %>
    <%= subscription.subscribee.username %> <%= link_to "Unsubscribe", subscription, :method => :delete %><br />
  <% end %>
<% end %>

<h3>Recommended Users</h3>
<% for user in @users %>
  <% if !@user.subscribees.include?(user) %>
    <%= user.username %> <%= link_to "Subscribe", subscriptions_path(:user_id => @user, :subscribee_id => user), :method => :post %>
    <br />
  <% end %>
<% end %>

<%= link_to 'Back', users_path %>
